{
    "extends": "tslint:recommended",
    "rules": {
		"encoding": true,
		"indent": [true, "tabs", 2],
		"linebreak-style": [true, "LF"],
		"semicolon": [true, "always"],
		"newline-before-return": false,
		"no-consecutive-blank-lines": [true, 2],
		"no-trailing-whitespace": true,
		"no-var-requires": false,
		"quotemark": [true, "single"],
		"arrow-parens": true,
		"eofline": true,
		"no-console": false
    }
}
