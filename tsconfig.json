{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"target": "es6",
		"outDir": "out",
		"lib": ["es6"],
		"sourceMap": true,
		"rootDir": "src",
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		]
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test", "coverage", "testFixture", "resources"]
}
