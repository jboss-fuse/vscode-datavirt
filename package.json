{
	"name": "vscode-datavirt",
	"displayName": "Red Hat Integration - Data Virtualization Tooling",
	"description": "VS Code tools to work with Virtual Database Configurations for Red Hat Integration - Data Virtualization Tooling.",
	"version": "0.0.1",
	"publisher": "redhat",
	"icon": "icons/icon128.png",
	"preview": true,
	"bugs": "https://github.com/jboss-fuse/vscode-datavirt/issues",
	"homepage": "https://github.com/jboss-fuse/vscode-datavirt",
	"repository": {
		"type": "git",
		"url": "https://github.com/jboss-fuse/vscode-datavirt.git"
	},
	"contributors": [
		{
			"name": "Lars Heinemann",
			"email": "lheinema@redhat.com",
			"url": "https://redhat.com"
		}
	],
	"license": "Apache-2.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"keywords": [
		"datavirt",
		"data",
		"virtualization",
		"teiid"
	],
	"categories": [
		"Other"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"title": "Create a Virtual Database Definition (VDB)",
				"command": "datavirt.create.vdb",
				"category": "dv"
			},
			{
				"title": "Create a Datasource",
				"command": "datavirt.create.datasource",
				"category": "dv"
			},
			{
				"title": "Delete Datasource",
				"command": "datavirt.delete.datasource",
				"category": "dv"
			},
			{
				"title": "Create an Entry",
				"command": "datavirt.create.datasourceentry",
				"category": "dv"
			},
			{
				"title": "Modify Entry",
				"command": "datavirt.edit.datasourceentry",
				"category": "dv"
			},
			{
				"title": "Delete Entry",
				"command": "datavirt.delete.datasourceentry",
				"category": "dv"
			},
			{
				"title": "Modify Schema",
				"command": "datavirt.edit.schema",
				"category": "dv"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "datavirt",
					"name": "Data Virtualization"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "datavirt.create.datasource",
					"when": "false"
				},
				{
					"command": "datavirt.delete.datasource",
					"when": "false"
				},
				{
					"command": "datavirt.create.datasourceentry",
					"when": "false"
				},
				{
					"command": "datavirt.edit.datasourceentry",
					"when": "false"
				},
				{
					"command": "datavirt.delete.datasourceentry",
					"when": "false"
				},
				{
					"command": "datavirt.edit.schema",
					"when": "false"
				}
			],
			"view/title": [
				{
					"group": "dv",
					"command": "datavirt.create.vdb"
				}
			],
			"view/item/context": [
				{
					"group": "dv",
					"command": "datavirt.create.vdb",
					"when": "viewItem == dv.project"
				},
				{
					"group": "dv",
					"command": "datavirt.create.datasource",
					"when": "viewItem == dv.project || viewItem == dv.datasources"
				},
				{
					"group": "dv",
					"command": "datavirt.delete.datasource",
					"when": "viewItem == dv.datasource"
				},
				{
					"group": "dv",
					"command": "datavirt.create.datasourceentry",
					"when": "viewItem == dv.datasource"
				},
				{
					"group": "dv",
					"command": "datavirt.edit.datasourceentry",
					"when": "viewItem == dv.datasourceentry"
				},
				{
					"group": "dv",
					"command": "datavirt.delete.datasourceentry",
					"when": "viewItem == dv.datasourceentry"
				},
				{
					"group": "dv",
					"command": "datavirt.edit.schema",
					"when": "viewItem == dv.schemas || viewItem == dv.schema"
				}
			]
		},
		"languages": [
			{
				"id": "ddl",
				"extensions": [
					".ddl"
				]
			}
		]
	},
	"activationEvents": [
		"*"
	],
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -w -p ./",
		"postinstall": "node ./scripts/postinstall.js",
		"clean": "rm -rf out || rmdir out /s /q",
		"test": "node ./out/test/runTest.js",
		"update-deps": "npm update",
		"tslint": "gulp tslint"
	},
	"dependencies": {
		"fs": "^0.0.1-security",
		"path": "^0.12.7",
		"vscode-languageclient": "^6.1.3",
		"yaml": "^1.8.3"
	},
	"devDependencies": {
		"@types/chai": "^4.2.11",
		"@types/glob": "^7.1.1",
		"@types/istanbul": "^0.4.30",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.1",
		"@types/sinon": "^9.0.0",
		"@types/sinon-chai": "^3.2.4",
		"@types/vscode": "^1.44.0",
		"async-wait-until": "^1.2.4",
		"chai": "^4.2.0",
		"decache": "^4.5.1",
		"gulp": "^4.0.2",
		"gulp-tslint": "^8.1.4",
		"istanbul": "^0.4.5",
		"mocha": "^7.1.1",
		"mocha-jenkins-reporter": "^0.4.3",
		"mvn-artifact-download": "^4.1.0",
		"remap-istanbul": "^0.13.0",
		"sinon": "^9.0.1",
		"sinon-chai": "^3.5.0",
		"tslint": "^6.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
